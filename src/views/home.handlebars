<section class="container mt-3">
    <h1
        class="w-100 border border-secondary text-center p-3 rounded shadow mb-4"
    >Get your Stickers!</h1>
    {{#if stickers}}
        <div class="container d-flex justify-content-around flex-wrap">
            {{#each stickers}}
                <div class="card mx-2 mb-4 shadow-sm" style="width: 18rem;">
                    <img src={{this.image}} alt="Sticker" />
                    <div class="card-header">
                        <h5 class="card-title m-0">{{this.title}}</h5>
                    </div>
                    <div
                        class="card-body d-flex justify-content-between align-items-center"
                    >
                        <h4 class="card-title m-0">$ {{this.price}}</h4>
                        <a
                            href="http://localhost:8080/api/carts/sticker/{{this._id}}"
                        >
                            <button class="btn btn-light justify-self-center">
                                ADD TO CART</button>
                        </a>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p class="alert alert-info" role="alert">ThereÂ´s no products...</p>
    {{/if}}
</section>

{{#if user}}
    <footer
        class="bg-secondary w-100 p-4 d-flex justify-content-around align-items-center"
    >
        <div class="d-flex align-items-center">
            <img
                src={{user.avatar}}
                style="width: 80px;border-radius: 50%; padding-right: .5rem"
                alt="User"
            />
            <h5 class="text-white">Hey, {{user.name}}!</h5>
        </div>
        <div>
            <a href="http://localhost:8080/cart/">
                <button class="btn btn-outline-light shadow">SEE YOUR CART</button>
            </a>
        </div>
    </footer>
{{/if}}